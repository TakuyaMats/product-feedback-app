<div class="roadmap-grid-container">
    <div class="roadmap-main-header">
        <div class="title-container">
            <img src="/css/shared/icon-arrow-up-white.svg">
            <input class="detail-back-btn" type="button" value="Go Back" onclick="history.back()">
            <h1>Roadmap</h1>
        </div>
        <button class="add-feedback-btn" type="submit">
            <a class="add-feedback-link" href="/dashboard/new">+ Add Feedback</a>
        </button>
    </div>
    <div class="roadmap-nav">
        <button class="roadmap-planned-tab tab-btn active" data-target="planned">Planned ({{planned.length}})</button>
        <button class="roadmap-in-progress-tab tab-btn" data-target="in-progress">In-Progress ({{inProgress.length}})</button>
        <button class="roadmap-live-tab tab-btn" data-target="live">Live ({{live.length}})</button>
        </div>
    <hr class="hr">
    <div class="roadmap-planned tab-content active" data-tab="planned">
        <h2>Planned ({{planned.length}})</h2>
        <p>Ideas prioritized for research</p>
        {{#each planned as |feedback|}}
            {{> planned feedback}}
        {{/each}}
    </div>
    <div class="roadmap-in-progress tab-content" data-tab="in-progress">
        <h2>In-Progress ({{inProgress.length}})</h2>
        <p>Currently being developed</p>
        {{#each inProgress as |feedback|}}
            {{> inProgress feedback}}
        {{/each}}
    </div>
    <div class="roadmap-live tab-content" data-tab="live">
        <h2>Live ({{live.length}})</h2>
        <p>Released features</p>
        {{#each live as |feedback|}}
            {{> live feedback}}
        {{/each}}
    </div>
</div>

<script src="/js/navtabs.js"></script>