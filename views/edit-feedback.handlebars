<div class="edit-feedback-container">
    <div class="edit-feedback-header">
        <form class="edit-feedback-btn">
            <div class="back-container">
                <img src="/css/shared/icon-arrow-left.svg">
                <input class="detail-back-btn" type="button" value="Go Back" onclick="history.back()">
            </div>
        </form>
    </div>
    <div class="edit-feedback-card">
        <div class="card-container">
            <img src="/css/shared/icon-edit-feedback.svg">
            {{!-- this need to render dynamically --}}
            <h1>Editing 'Add a dark theme option'</h1>
            <form class="card-body edit-feedback-form" id="edit-feedback-form">
                <div class="title-container">
                    <label for="feedback-title" class="form-label">
                        <h4>Feedback Title</h4>
                        <p>Add a short, descriptive headline</p>
                    </label>
                    <input type="text" id="feedback-title" name="feedback-title" class="form-input-title" value="{{feedback.title}}"/>
                </div>
                <div class="category-container">
                    <label for="category">
                        <h4>Category</h4>
                        <p>Choose a category for your feedback</p>
                    </label>
                    <select id="category" name="category">
                        <option value="UI">UI</option>
                        <option value="UX">UX</option>
                        <option value="Enhancement">Enhancement</option>
                        <option value="Bug">Bug</option>
                        <option value="Feature">Feature</option>
                    </select>
                </div>
                <div class="status-container">
                    <label for="status">
                        <h4>Update Status</h4>
                        <p>Change feedback state</p>
                    </label>
                    <select id="status" name="status">
                        <option value="Planned">Planned</option>
                        <option value="In-Progress">In-Progress</option>
                        <option value="Live">Live</option>
                    </select>
                </div>
                <div class="detail-container">
                    <label for="detail">
                        <h4>Feedback Detail</h4>
                        <p>Include any specific comments on what should be improved, added, etc.</p>
                    </label>
                    <input type="text" id="feedback-detail" name="feedback-detail" class="form-input-detail" value="{{feedback.description}}"/>
                </div>
                <div class="edit-feedback-footer">
                    <button type="button" class="delete-btn">Delete</button>
                    <input class="detail-btn" type="button" value="Cancel" onclick="history.back()">
                    <button type="submit" class="add-btn">Add Feedback</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/edit-feedback.js"></script>
<script src="/js/delete-feedback.js"></script>