<div class="comments">
    <h3>2 Comments</h3>
    {{#each this}}
    <div class="card">
        <section class="comment card-body">
            <div>
                {{user.name}}
            </div>
            <div class="meta">
                @{{user.username}}
            </div>
            <div class="text">
                {{content}}
            </div>
        </section>
    </div>
    {{/each}}
</div>